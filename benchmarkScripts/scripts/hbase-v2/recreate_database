#!/bin/bash   
. settings || exit 1

url="http://${aDbHosts[0]}:$DB_PORT/$DB_NAME/schema"
echo 'Creating database...'
echo '  dropping old if exists...'
cdbasetime=$(date +%s%N)
curl -s -X DELETE $url
echo '  adding new structure...'
curl -X PUT $url -H "Content-Type: application/json" -d '{"@name:":"$DB_NAME", "ColumnSchema":[{"name":"data"}]}' || exit 1

echo "scale=3;($(date +%s%N) - ${cdbasetime})/(1*10^09)" | bc
echo 'Database created'

